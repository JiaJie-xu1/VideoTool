<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@color/bg_gray"
        android:orientation="vertical">

        <com.partner.videotools.utils.KWebView
            android:id="@+id/webView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="15dp"
            android:background="@drawable/white_btn_bg"
            android:hint="输入抖音分享链接"
            android:textIsSelectable="true" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/white_btn_bg"
            android:textColor="@color/text_gray"
            android:layout_gravity="center"
            android:onClick="button"
            android:text="开始解析"
            />

        <RelativeLayout
            android:background="@drawable/white_btn_bg"
            android:layout_margin ="10dp"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvResultTip"
                android:text="视频地址生成(点击复制完整链接)："
                android:textColor="@color/dark_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvResult"
                android:layout_below="@id/tvResultTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onResultClick"
                android:maxLines="4"
                android:ellipsize="end"
                android:textColor="@color/text_gray"
                />
        </RelativeLayout>


        <com.partner.videotools.view.AutoPlayVideoPlayer
            android:id="@+id/videoPlayer"
            android:layout_width="match_parent"
            android:layout_height="300dp"
           android:layout_margin="10dp"
            />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>